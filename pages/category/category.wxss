page {
  width: 100%;
  height: 100%;
  background: #fff;
}

.video-list {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-left: 1%;
  margin-top: 12rpx;
}

.video-item {
  width: 46%;
  height: auto;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  border-radius: 2px;
  margin: 1%;
  justify-content: center;
  align-items: center;
  position: relative;
}

.vip-view {
  width: 96%;
  position: relative;
}

.video-cover {
  width: 96%;
  height: 194rpx;
  margin-top: 10rpx;
  margin-left: 2%;
  margin-right: auto;
  margin-bottom: 0px;
  border-radius: 6px;
}

.vip-img {
  width: 82rpx;
  height: 38rpx;
  position: absolute;
  top: 0;
  right: 0;
}

.video-title {
  height: 48rpx;
  font-size: 28rpx;
  color: #000;
  text-overflow: ellipsis;
}
